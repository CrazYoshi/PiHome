<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="example_server_address"
        android:title="@string/pref_title_server_address"
        android:defaultValue="@string/pref_default_server_address"
        android:selectAllOnFocus="true"
        android:inputType="textUri"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="example_server_port"
        android:title="@string/pref_title_server_port"
        android:defaultValue="@string/pref_default_server_port"
        android:inputType="number"/>

</PreferenceScreen>
